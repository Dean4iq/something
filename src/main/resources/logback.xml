<?xml version="1.0" encoding="UTF-8"?>
<configuration packagingData="true" debug="true">
    <appender name="INFO_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %highlight(%-5level %logger) %green(%msg) %n</pattern>
        </encoder>
    </appender>

    <appender name="WARN_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %boldYellow(%-5level %logger) %boldYellow(%msg) %n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <encoder>
            <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %boldRed(%-5level %logger %msg%n)</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="INFO_STDOUT" />
        <appender-ref ref="WARN_STDOUT" />
        <appender-ref ref="ERROR_STDOUT" />
    </root>
</configuration>